  <style>
    /* Should move to global? */
    :root {
      /* System Fonts */
      /* https://systemfontstack.com/ */
      --system-sans: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
        Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
      --system-serif: Iowan Old Style, Apple Garamond, Baskerville,
        Times New Roman, Droid Serif, Times, Source Serif Pro, serif,
        Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol;
      --system-mono: Menlo, Consolas, Monaco, Liberation Mono, Lucida Console,
        monospace;

      /* Spacing */
      --page-px: 1rem;
      /* Media */
      --max-width: 37em;

      /* inbetween small and big tablets */
      --bp-tablet: 900px;
    }

    p {
      font-family: var(--system-sans);
      font-size: 1.5rem; /* 24px */
      line-height: 1.25;
      font-weight: 500;
      transition: all 0.2s ease-out;
    }

    a,
    a:visited {
      color: revert;
      color: blue;
    }
    .parent {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .container {
      /* max-width: 600px; */
      max-width: calc(var(--max-width) + var(--page-px) * 2);
      margin: 0 auto;
      padding: 0 var(--page-px);
      transition: padding 0.2s ease-out;
    }

    /* @media (min-width: var(--bp-tablet)) { */
    @media (min-width: 821px) {
      :root {
        --page-px: 4rem;
        --max-width: 42em;
      }

      p {
        /* color: blue; */
        font-size: 1.875rem; /* 30px */
        line-height: 1.35;
        font-weight: 600;
      }
    }
    @media (min-width: 1200px) {
      :root {
        --max-width: 52em;
      }

      p {
        /* color: red; */
        font-size: 2.25rem; /* 36px */
      }
    }
  </style>

